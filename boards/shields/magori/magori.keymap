#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer { // Layer 0
            bindings = <
            // ------------------------------------------------- GRAPHITE MOD -------------------------------------------------
            //╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮
            //|    ESC   |    B     |    L     |     D    |    W     |    Z     |   |   . !    |    F     |    O     |    U     |    J     |    V     |
                 &kp ESC   &kp B      &kp L       &kp D     &kp W      &kp Z        &mt DOT EXCL &kp F      &kp O      &kp U      &kp J      &kp V
